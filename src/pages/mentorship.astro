---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mentorship">
  <mentorship-component class="gap-2 grid">
    <section class="hero">
      <h1>Mentorship Program</h1>
      <p class="hero-description">
        Unlock your potential with personalized guidance and support. My
        mentorship program is designed to help you navigate your career,
        develop new skills, and achieve your professional goals.
      </p>
    </section>

    <section class="gap grid mentor-stats">
      <card-component>
        <span class="stat-number">10+</span>
        <span class="stat-label">Years of Experience</span>
      </card-component>
      <card-component>
        <span class="stat-number">50+</span>
        <span class="stat-label">Mentees Supported</span>
      </card-component>
      <card-component>
        <span class="stat-number">100%</span>
        <span class="stat-label">Satisfaction Rate</span>
      </card-component>
    </section>

    <section class="gap grid">
      <h2>Areas of Mentorship</h2>
      <div class="gap grid">
        <card-component>
          <h3>Software Development</h3>
          <p>
            Guidance on best practices, new technologies, and career growth in
            software engineering.
          </p>
        </card-component>
        <card-component>
          <h3>Web Development</h3>
          <p>
            Focus on front-end and back-end technologies, frameworks, and tools.
          </p>
        </card-component>
        <card-component>
          <h3>Career Advice</h3>
          <p>
            Strategies for job searching, interviewing, and advancing your
            career.
          </p>
        </card-component>
      </div>
    </section>

    <section class="gap grid">
      <h2>My Approach</h2>
      <div class="gap grid">
        <card-component>
          <h4>Personalized Plan</h4>
          <p>
            We'll create a tailored plan based on your specific goals and needs.
          </p>
        </card-component>
        <card-component>
          <h4>Regular Check-ins</h4>
          <p>Consistent support and feedback to keep you on track.</p>
        </card-component>
        <card-component>
          <h4>Resource Sharing</h4>
          <p>Access to valuable resources, tools, and networks.</p>
        </card-component>
      </div>
    </section>

    <section class="gap grid">
      <h2>Testimonial</h2>
      <card-component>
        <p class="testimonial-quote">
          "Working with Andrew has been a game-changer for my career. His
          insights and guidance were invaluable."
        </p>
        <p class="testimonial-author">- Jane Doe, Software Engineer</p>
      </card-component>
    </section>

    <section class="cta">
      <h2>Ready to Start?</h2>
      <p>
        Contact me today to learn more about the mentorship program and how we
        can work together.
      </p>
      <contact-component></contact-component>
    </section>
  </mentorship-component>
</Layout>
<script>
  import { Base } from "@components/base";
  import { css, html } from "lit";
  import { customElement } from "lit/decorators.js";
  import "@components/card";
  import "@components/contact";

  @customElement("mentorship-component")
  class MentorshipComponent extends Base {
    static styles = [
      ...super.styles,
      css`
        :host {
          display: flex;
          flex-direction: column;
          gap: 2rem;
          width: 100%;
        }

        section {
          display: flex;
          flex-direction: column;
          gap: 1rem;
        }

        .hero {
          text-align: center;
        }

        .hero-description {
          font-size: 1.125rem;
          line-height: 1.7;
          color: var(--color-neutral-300);
          max-width: 48rem;
          margin: 0 auto;
        }

        .mentor-stats {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
          gap: 1.5rem;
        }

        .stat-number {
          font-size: 2rem;
          font-weight: 800;
          color: var(--color-blue-600);
          display: block;
        }

        .stat-label {
          color: var(--color-neutral-600);
          font-size: 0.875rem;
          margin-top: 0.25rem;
        }

        .grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
          gap: 1.5rem;
        }

        .testimonial-quote {
          font-style: italic;
          font-size: 1.125rem;
          line-height: 1.6;
          margin-bottom: 1rem;
        }

        .testimonial-author {
          font-weight: 600;
          color: var(--color-neutral-700);
        }

        .cta {
          text-align: center;
        }

        h1,
        h2,
        h3,
        h4 {
          margin: 0;
        }

        h2 {
          text-align: center;
        }

        p {
          margin: 0;
          color: var(--color-neutral-400);
        }

        card-component {
          gap: 0.5rem;
        }

        @media (max-width: 768px) {
          .hero-description {
            font-size: 1rem;
          }

          .mentor-stats,
          .grid {
            grid-template-columns: 1fr;
            gap: 1rem;
          }
        }
      `,
    ];

    render() {
      return html`<slot></slot>`;
    }
  }
</script>
