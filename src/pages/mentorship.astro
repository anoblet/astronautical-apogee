---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mentorship">
  <mentorship-component></mentorship-component>
</Layout>
<script>
  import { Base } from "@components/base";
  import { css, html } from "lit";
  import { customElement } from "lit/decorators.js";
  import "@components/card";
  import "@components/contact";
  import { arrowForward } from "@icons/arrow-forward";

  @customElement("mentorship-component")
  class MentorshipComponent extends Base {
    static styles = [
      ...super.styles,
      css`
        a {
          font-weight: 800;
        }

        svg {
          height: 1rem;
          width: 1rem;
        }

        .hero-description {
          font-size: 1.125rem;
          line-height: 1.7;
          color: var(--color-neutral-300);
          max-width: 48rem;
          margin: 0 auto;
        }

        .mentor-grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
          gap: 2rem;
        }

        .testimonial {
          background-color: var(--card-background-color);
          border-radius: 0.5rem;
          padding: 1.5rem;
          border-left: 4px solid var(--color-teal-400);
          font-style: italic;
        }

        .testimonial-author {
          font-weight: 600;
          margin-top: 1rem;
          color: var(--color-teal-300);
        }

        @media (max-width: 768px) {
          .hero-description {
            font-size: 1rem;
          }

          .mentor-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
          }
        }
      `,
    ];

    render() {
      return html`
        <div class="column flex gap-3 page">
          <div class="gap grid">
            <h1 class="text-align-center">Mentorship</h1>
            <p class="hero-description text-align-center">
              Accelerate your development journey with personalized guidance and
              industry expertise. Whether you're starting your career or looking
              to level up your skills, I'm here to help you navigate the world
              of software development and achieve your goals.
            </p>
          </div>

          <div class="column gap-2 grid">
            <card-component>
              <h3>Career Guidance</h3>
              <div class="flex-1">
                <p>
                  Navigate your software development career with confidence.
                  From choosing the right technologies to landing your dream
                  job, I'll help you create a strategic plan for success.
                </p>
                <ul>
                  <li>Career path planning and goal setting</li>
                  <li>Portfolio and resume review</li>
                  <li>Interview preparation and practice</li>
                  <li>Salary negotiation strategies</li>
                  <li>Professional networking guidance</li>
                </ul>
              </div>
            </card-component>

            <card-component>
              <h3>Technical Skills Development</h3>
              <div class="flex-1">
                <p>
                  Master modern web technologies and best practices through
                  hands-on learning. I'll create a customized curriculum based
                  on your goals and current skill level.
                </p>
                <ul>
                  <li>Web Components and Lit framework</li>
                  <li>Modern JavaScript and TypeScript</li>
                  <li>CSS architecture and design systems</li>
                  <li>Performance optimization techniques</li>
                  <li>Testing and quality assurance</li>
                </ul>
              </div>
            </card-component>

            <card-component>
              <h3>Project Mentorship</h3>
              <div class="flex-1">
                <p>
                  Get expert guidance on your personal or professional
                  projects. From architecture decisions to implementation
                  challenges, I'll help you build better software.
                </p>
                <ul>
                  <li>Code review and architecture feedback</li>
                  <li>Problem-solving and debugging support</li>
                  <li>Best practices and design patterns</li>
                  <li>Project planning and execution</li>
                  <li>Technology selection and evaluation</li>
                </ul>
              </div>
            </card-component>
          </div>

          <section class="gap grid">
            <h2 class="text-align-center">What You Can Expect</h2>
            <div class="mentor-grid">
              <div class="testimonial">
                "The mentorship provided invaluable insights into modern web
                development practices. The personalized approach helped me land
                my first developer role within three months."
                <div class="testimonial-author">— Former Mentee</div>
              </div>
              <div class="testimonial">
                "Working with Andrew transformed how I approach problem-solving
                in code. The focus on clean architecture and best practices has
                made me a much more effective developer."
                <div class="testimonial-author">— Software Engineer</div>
              </div>
            </div>
          </section>

          <section class="gap grid">
            <h2 class="text-align-center">Mentorship Process</h2>
            <div class="mentor-grid">
              <card-component>
                <h4>1. Initial Assessment</h4>
                <p>
                  We'll start with a comprehensive discussion about your
                  background, goals, and current challenges to create a
                  personalized learning plan.
                </p>
              </card-component>
              <card-component>
                <h4>2. Regular Sessions</h4>
                <p>
                  Weekly or bi-weekly sessions focused on your specific needs,
                  whether it's technical skills, career guidance, or project
                  support.
                </p>
              </card-component>
              <card-component>
                <h4>3. Practical Application</h4>
                <p>
                  Hands-on projects and real-world challenges to reinforce
                  learning and build your portfolio with guidance and feedback.
                </p>
              </card-component>
              <card-component>
                <h4>4. Ongoing Support</h4>
                <p>
                  Access to resources, code reviews, and continued guidance as
                  you progress in your development journey.
                </p>
              </card-component>
            </div>
          </section>

          <section class="gap grid justify-content-center text-align-center">
            <h2>Ready to Level Up Your Skills?</h2>
            <p>
              Let's discuss your goals and create a mentorship plan that works
              for you.
            </p>
            <contact-component></contact-component>
          </section>
        </div>
      `;
    }
  }
</script>
