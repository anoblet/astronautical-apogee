---
import Layout from '@layouts/default.astro';

import ProfessionalBackground from '@components/ProfessionalBackground.astro';
import Philosophy from '@components/Philosophy.astro';
import NotableProjects from '@components/NotableProjects.astro';
import Testimonials from '@components/Testimonials.astro';
import Timeline from '@components/Timeline.astro';
import ContactInfo from '@components/ContactInfo.astro';
---

<Layout title="About Andrew Noblet">
  <div class="max-width-56 width-100 margin-auto flex column gap-3">
    <h1 class="font-size-2 font-weight-8 margin-bottom-2 text-align-center">
      Meet Andrew Noblet
    </h1>

    <ProfessionalBackground
      roles={[
        'Lead Frontend Engineer at TechNova (2022–present)',
        'Senior Developer at WebWorks (2018–2022)',
        'Freelance Consultant (2015–2018)',
      ]}
      skills={[
        'TypeScript',
        'Astro',
        'React',
        'Accessibility',
        'Performance',
        'Design Systems',
      ]}
    />

    <Philosophy
      philosophy="Technology should empower everyone. I strive for simplicity, inclusivity, and continuous growth. My global journey shapes my adaptable, open-minded approach."
    />

    <NotableProjects
      projects={[
        {
          name: 'Astro Portfolio',
          description:
            'A blazing-fast, accessible portfolio site built with Astro.',
          link: 'https://github.com/anoblet/astro-portfolio',
        },
        {
          name: 'Design System Toolkit',
          description: 'Reusable design system for modern web apps.',
          link: 'https://github.com/anoblet/design-system-toolkit',
        },
        {
          name: 'Accessibility Audit',
          description: 'Automated accessibility auditing tool.',
          link: 'https://github.com/anoblet/accessibility-audit',
        },
      ]}
    />

    <Testimonials
      testimonials={[
        {
          quote: 'Andrew brings clarity and creativity to every project.',
          author: 'Jane Doe, Product Manager',
        },
        {
          quote: 'A true champion of accessible design.',
          author: 'Carlos Rivera, UX Designer',
        },
      ]}
    />

    <Timeline
      milestones={[
        { year: '2015', event: 'Started freelance consulting' },
        { year: '2018', event: 'Joined WebWorks as Senior Developer' },
        { year: '2022', event: 'Lead Frontend Engineer at TechNova' },
        { year: '2024', event: 'Launched Astro Portfolio' },
      ]}
    />

    <ContactInfo
      email="andrew@apogee.dev"
      socials={[
        { name: 'GitHub', link: 'https://github.com/anoblet' },
        { name: 'LinkedIn', link: 'https://linkedin.com/in/anoblet' },
      ]}
    />
  </div>
</Layout>
