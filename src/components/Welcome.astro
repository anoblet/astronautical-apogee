---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg'; // Keep background SVG, but styling will change
---

<div id="container">
	<!-- Background image is now handled differently or potentially removed if pure color is preferred -->
	<!-- <img id="background" src={background.src} alt="" fetchpriority="high" /> -->
	<main>
		<section id="hero">
			<a href="https://astro.build" target="_blank" rel="noopener noreferrer">
				<img src={astroLogo.src} width="115" height="48" alt="Astro Logo" />
			</a>
			<h1>
				Welcome to <span class="highlight">Astronautical Apogee</span>! Edit <code>src/pages/index.astro</code>.
			</h1>
			<section id="links">
				<a class="button" href="https://docs.astro.build" target="_blank" rel="noopener noreferrer">Docs</a>
				<a class="link" href="https://astro.build/chat" target="_blank" rel="noopener noreferrer">
					Discord
