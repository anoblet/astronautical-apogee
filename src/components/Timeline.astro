---
interface Milestone {
  year: string;
  event: string;
}
interface Props {
  milestones: Milestone[];
}
const { milestones } = Astro.props;
---

<section class="timeline">
  <h2>Timeline</h2>
  <ul>
    {
      milestones.map(m => (
        <li>
          <strong>{m.year}:</strong> {m.event}
        </li>
      ))
    }
  </ul>
</section>

<style>
  .timeline h2 {
    color: var(--color-accent-600);
    margin-bottom: 0.5rem;
  }
  .timeline ul {
    margin-bottom: 1rem;
  }
</style>
