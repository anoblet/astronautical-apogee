---
import "../styles/colors.css";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-N2FTVHQC");
    </script>
    <!-- End Google Tag Manager -->

    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body style="background-color: oklch(0.205 0 0);">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-N2FTVHQC"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Header />
    <main>
      <slot />
    </main>
    <social-component></social-component>
    <Footer />
  </body>
</html>
<script>
  import "../components/social";
</script>
<style>
  @view-transition {
    navigation: auto;
  }
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    opacity: 1;
    transition: opacity 0.2s ease-in-out;

    &:has(*:not(:defined)) {
      opacity: 0;
    }
  }

  main {
    display: flex;
    flex: 1;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 1024px;
    padding: 1rem;
    width: 100%;
  }
</style>
<link
  href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
  rel="stylesheet"
/>
<script>
  import media from "../media";

  media.subscribe((media: string) => {
    document.body.setAttribute("data-media", media);
  });
</script>
<script>
  import { globalStyles } from "../styles/global";

  if (globalStyles.styleSheet) {
    document.adoptedStyleSheets = [
      ...document.adoptedStyleSheets,
      globalStyles.styleSheet,
    ];
  } else {
    console.error("Global styles not loaded");
  }
</script>
